<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Pick up date</th>
      <th>Book</th>
      <th>Member</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.pick_up_date %></td>
        <td><%= reservation.book.title %></td>
        
        <td><%= link_to image_tag("show.jpg", :size=>"20x20"), reservation %></td>
        <td><%= link_to image_tag("edit.jpg", :size=>"20x20"), edit_reservation_path(reservation) %></td>
        <td><%= link_to image_tag("destroy.jpg", :size=>"20x20"), reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path %>
