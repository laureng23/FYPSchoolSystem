<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Descritpion</th>
      <th>Recommend</th>
      <th>Member</th>
      <th>Book</th>
      <th colspan="200"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.descritpion %></td>
        <td><%= review.recommend %></td>
        <td><%= review.member.name %></td>
        <td><%= review.book.title %></td>
		<td><%= link_to image_tag("show.jpg", :size=>"20x20"), review %></td>
        <td><%= link_to image_tag("edit.jpg", :size=>"20x20"), edit_review_path(review) %></td>
        <td><%= link_to image_tag("destroy.jpg", :size=>"20x20"), review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
