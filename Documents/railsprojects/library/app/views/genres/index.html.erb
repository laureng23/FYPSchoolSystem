<p id="notice"><%= notice %></p>

<h1>Displaying all genres</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to image_tag("show.jpg", :size=>"20x20"), genre %></td>
        <td><%= link_to image_tag("edit.jpg", :size=>"20x20"), edit_genre_path(genre) %></td>
        <td><%= link_to image_tag("destroy.jpg", :size=>"20x20"), genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


