<p id="notice"><%= notice %></p>

<h2>Books We Stock</h2>
<br><h1>New Lines Added Everyday</h1>



<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre.name %></td>
        <td><%= book.available %></td>
        <td><%= link_to image_tag("show.jpg", :size=>"20x20"), book %></td>
        <td><%= link_to image_tag("edit.jpg", :size=>"20x20"), edit_book_path(book) %></td>
        <td><%= link_to image_tag("destroy.jpg", :size=>"20x20"), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>Admin note: to return book, edit and mark available!</p>

